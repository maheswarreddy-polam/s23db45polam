extends layout

block content
  h1= title

  - var items = results

  div(class="container-fluid")
    div(class="row")
      each s in items
        div(class="col-sm-2")
          p #{s.NAME}, #{s.AGE}, #{s.COLOR}
        - let destination = `/eagle/update?id=${s._id}`
          div(class="col-sm-2", onclick=`buy(${s})`) #{s.NAME}, #{s.AGE}, #{s.COLOR} // Fix variable name
          button.btn(class="btn-dark ml-1", onclick=`dispatch('${destination}')`) Update
  script.
    function buy(a) {
      alert(`You purchased Item ${a.NAME}`);
    }
    function dispatch(path) {
      window.location.href = path;
    }
