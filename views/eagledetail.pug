extends layout

block content
  h1= title

  - let eagleid = toShow._id
  - let eagle_NAME = toShow.NAME
  - let eagleAGE = toShow.AGE
  - let eagleCOLOR= toShow.COLOR

  div
    div.row
      div(class='eagleAttr mr-4') eagle ID is:
      div #{eagleid}

    div.row
      div(class='eagleAttr mr-4')  NAME is:
      div #{eagle_NAME}

    div.row
      div(class='eagleAttr mr-4') AGE is:
      div #{eagleAGE}

    div.row
      div(class='eagleAttr mr-4') COLOR:
      div #{eagleCOLOR}